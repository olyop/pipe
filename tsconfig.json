{
	"compilerOptions": {
		"strict": true,
		"outDir": "dist",
		"target": "ESNEXT",
		"declaration": true,
		"module": "CommonJS",
		"removeComments": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true
	},
	"files": [
		"src/index.ts"
	]
}